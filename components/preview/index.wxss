/* 预览容器 */
.preview-container {
  width: 100%;
  min-height: 200rpx;
  background-color: #ffffff;
  border-radius: 0;
  overflow: hidden;
  position: relative;
}

/* 空状态样式 */
.preview-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  text-align: center;
  color: #999;
  height: 300rpx;
}

.empty-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 24rpx;
  line-height: 1.4;
  color: #999;
  max-width: 400rpx;
}

/* 错误状态样式 */
.preview-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  text-align: center;
  background-color: #fff5f5;
  border: 1rpx solid #ffccc7;
  border-radius: 0;
  margin: 20rpx;
  min-height: 200rpx;
}

.error-icon {
  font-size: 50rpx;
  margin-bottom: 20rpx;
  color: #ff4d4f;
}

.error-text {
  font-size: 24rpx;
  line-height: 1.5;
  color: #ff4d4f;
  word-break: break-word;
  max-width: 100%;
}

/* 预览内容样式 */
.preview-content {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}

.preview-rich-text {
  width: 100%;
  min-height: 100rpx;
  line-height: 1.6;
  font-size: 24rpx;
  color: #333;
}

/* Markdown 预览样式 */
.markdown-preview .h1 {
  font-size: 36rpx;
  font-weight: bold;
  margin: 20rpx 0 10rpx;
  color: #333;
  border-bottom: 2rpx solid #eaeaea;
  padding-bottom: 10rpx;
}

.markdown-preview .h2 {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0 10rpx;
  color: #333;
  border-bottom: 1rpx solid #eaeaea;
  padding-bottom: 8rpx;
}

.markdown-preview .h3 {
  font-size: 28rpx;
  font-weight: bold;
  margin: 15rpx 0 8rpx;
  color: #555;
}

.markdown-preview .h4 {
  font-size: 26rpx;
  font-weight: bold;
  margin: 12rpx 0 6rpx;
  color: #666;
}

.markdown-preview .h5 {
  font-size: 24rpx;
  font-weight: bold;
  margin: 10rpx 0 5rpx;
  color: #777;
}

.markdown-preview .h6 {
  font-size: 22rpx;
  font-weight: bold;
  margin: 8rpx 0 4rpx;
  color: #888;
  font-style: italic;
}

.markdown-preview .p {
  margin: 10rpx 0;
  line-height: 1.6;
  color: #333;
}

.markdown-preview .strong {
  font-weight: bold;
  color: #333;
}

.markdown-preview .em {
  font-style: italic;
  color: #555;
}

.markdown-preview .inline-code {
  font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
  background-color: #f6f8fa;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  color: #d73a49;
}

.markdown-preview .code-block {
  margin: 15rpx 0;
  border: 1rpx solid #e1e4e8;
  border-radius: 6rpx;
  overflow: hidden;
  background-color: #fafbfc;
}

.markdown-preview .code-language {
  background-color: #f6f8fa;
  padding: 8rpx 12rpx;
  font-size: 18rpx;
  color: #586069;
  border-bottom: 1rpx solid #e1e4e8;
  font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
  font-weight: 500;
}

.markdown-preview .code-content {
  padding: 12rpx;
  font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
  font-size: 20rpx;
  line-height: 1.4;
  color: #24292e;
  white-space: pre-wrap;
  overflow-x: auto;
}

.markdown-preview .blockquote {
  margin: 10rpx 0;
  padding: 10rpx 20rpx;
  border-left: 4rpx solid #dfe2e5;
  background-color: #f6f8fa;
  color: #6a737d;
  font-style: italic;
  line-height: 1.6;
}

.markdown-preview .ul {
  margin: 10rpx 0;
  padding-left: 20rpx;
  list-style-type: disc;
}

.markdown-preview .ol {
  margin: 10rpx 0;
  padding-left: 20rpx;
  list-style-type: decimal;
}

.markdown-preview .li {
  margin: 5rpx 0;
  line-height: 1.6;
  color: #333;
  padding-left: 5rpx;
}

.markdown-preview .table {
  width: 100%;
  border-collapse: collapse;
  margin: 10rpx 0;
  border: 1rpx solid #eaeaea;
}

.markdown-preview .tr {
  border-bottom: 1rpx solid #eaeaea;
}

.markdown-preview .th,
.markdown-preview .td {
  padding: 8rpx 12rpx;
  border: 1rpx solid #eaeaea;
  text-align: left;
  line-height: 1.4;
}

.markdown-preview .th {
  font-weight: bold;
  background-color: #f8f9fa;
  color: #333;
}

.markdown-preview .td {
  background-color: #ffffff;
  color: #333;
}

.markdown-preview .hr {
  height: 1rpx;
  background-color: #eaeaea;
  margin: 20rpx 0;
  border: none;
}

.markdown-preview .link {
  color: #0366d6;
  text-decoration: underline;
  margin: 0 5rpx;
  cursor: pointer;
}

.markdown-preview .link:hover {
  color: #0056b3;
  text-decoration: none;
}

.markdown-preview .image {
  max-width: 100%;
  height: auto;
  margin: 10rpx 0;
  border: 1rpx solid #eaeaea;
  border-radius: 4rpx;
  display: block;
}

