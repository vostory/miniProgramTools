}

.html-preview .img {
  max-width: 100%;
  height: auto;
  margin: 10rpx 0;
  border: 1rpx solid #eaeaea;
  border-radius: 4rpx;
  display: block;
}

.html-preview .ul {
  margin: 10rpx 0;
  padding-left: 20rpx;
  list-style-type: disc;
}

.html-preview .ol {
  margin: 10rpx 0;
  padding-left: 20rpx;
  list-style-type: decimal;
}

.html-preview .li {
  margin: 5rpx 0;
  line-height: 1.6;
  color: #333;
  padding-left: 5rpx;
}

.html-preview .br {
  height: 10rpx;
  display: block;
}

.html-preview .hr {
  height: 1rpx;
  background-color: #eaeaea;
  margin: 20rpx 0;
  border: none;
}

.html-preview .code {
  font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
  background-color: #f6f8fa;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  color: #d73a49;
}

.html-preview .pre {
  margin: 15rpx 0;
  padding: 12rpx;
  background-color: #fafbfc;
  border: 1rpx solid #e1e4e8;
  border-radius: 6rpx;
  overflow-x: auto;
  font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
  font-size: 20rpx;
  line-height: 1.4;
  color: #24292e;
  white-space: pre-wrap;
}

.html-preview .blockquote {
  margin: 10rpx 0;
  padding: 10rpx 20rpx;
  border-left: 4rpx solid #dfe2e5;
  background-color: #f6f8fa;
  color: #6a737d;
  font-style: italic;
  line-height: 1.6;
}

.html-preview .table {
  width: 100%;
  border-collapse: collapse;
  margin: 10rpx 0;
  border: 1rpx solid #eaeaea;
}

.html-preview .thead {
  background-color: #f8f9fa;
}

.html-preview .tbody {
  background-color: #ffffff;
}

.html-preview .tr {
  border-bottom: 1rpx solid #eaeaea;
}

.html-preview .th,
.html-preview .td {
  padding: 8rpx 12rpx;
  border: 1rpx solid #eaeaea;
  text-align: left;
  line-height: 1.4;
}

.html-preview .th {
  font-weight: bold;
  color: #333;
}

.html-preview .strong {
  font-weight: bold;
  color: #333;
}

.html-preview .em {
  font-style: italic;
  color: #555;
}

.html-preview .u {
  text-decoration: underline;
  color: #333;
}

.html-preview .s {
  text-decoration: line-through;
  color: #666;
}

.html-preview .small {
  font-size: 20rpx;
  color: #666;
}

.html-preview .mark {
  background-color: #fff8c5;
  padding: 1rpx 4rpx;
  border-radius: 2rpx;
  color: #333;
}

.html-preview .sub {
  font-size: 20rpx;
  vertical-align: sub;
  color: #666;
}

.html-preview .sup {
  font-size: 20rpx;
  vertical-align: super;
  color: #666;
}

.html-preview .del {
  text-decoration: line-through;
  color: #666;
}

.html-preview .ins {
  text-decoration: underline;
  color: #333;
}

.html-preview .kbd {
  font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
  background-color: #f6f8fa;
  border: 1rpx solid #d1d5da;
  border-radius: 3rpx;
  padding: 2rpx 5rpx;
  font-size: 20rpx;
  color: #24292e;
  box-shadow: inset 0 -1rpx 0 #d1d5da;
}

.html-preview .samp {
  font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
  color: #24292e;
  font-size: 20rpx;
}

.html-preview .var {
  font-style: italic;
  color: #d73a49;
}

.html-preview .abbr {
  text-decoration: underline dotted;
  cursor: help;
  color: #0366d6;
}

.html-preview .bdo {
  unicode-bidi: bidi-override;
}

.html-preview .bdi {
  unicode-bidi: isolate;
}

.html-preview .ruby {
  display: inline-block;
  text-align: center;
  line-height: 1;
}

.html-preview .rt {
  font-size: 16rpx;
  color: #666;
  line-height: 1;
  display: block;
}

.html-preview .rp {
  font-size: 16rpx;
  color: #999;
  line-height: 1;
  display: none;
}

.html-preview .wbr {
  display: inline-block;
}

/* 加载状态样式 */
.preview-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  text-align: center;
  color: #999;
  height: 300rpx;
  background-color: rgba(255, 255, 255, 0.9);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}

.loading-spinner {
  width: 50rpx;
  height: 50rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid var(--primary-color, #07c160);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

/* 响应式样式 */
@media (max-width: 480rpx) {
  .preview-content {
    padding: 15rpx;
  }
  
  .markdown-preview .h1 {
    font-size: 32rpx;
  }
  
  .markdown-preview .h2 {
    font-size: 28rpx;
  }
  
  .markdown-preview .h3 {
    font-size: 26rpx;
  }
  
  .html-preview .h1 {
    font-size: 32rpx;
  }
  
  .html-preview .h2 {
    font-size: 28rpx;
  }
  
  .html-preview .h3 {
    font-size: 26rpx;
  }
}

/* 暗色主题支持 */
@media (prefers-color-scheme: dark) {
  .preview-container {
    background-color: #1a1a1a;
  }
  
  .preview-content {
    background-color: #1a1a1a;
  }
  
  .preview-rich-text {
    color: #e0e0e0;
  }
  
  .markdown-preview .h1,
  .markdown-preview .h2,
  .markdown-preview .h3,
  .markdown-preview .h4,
  .markdown-preview .h5,
  .markdown-preview .h6,
  .markdown-preview .p,
  .markdown-preview .strong,
  .html-preview .h1,
  .html-preview .h2,
  .html-preview .h3,
  .html-preview .h4,
  .html-preview .h5,
  .html-preview .h6,
  .html-preview .p,
  .html-preview .strong {
    color: #e0e0e0;
  }
  
  .markdown-preview .em,
  .html-preview .em {
    color: #b0b0b0;
  }
  
  .markdown-preview .code-block,
  .markdown-preview .code-content,
  .html-preview .pre {
    background-color: #2d2d2d;
    border-color: #404040;
  }
  
  .markdown-preview .code-language {
    background-color: #252525;
    border-color: #404040;
    color: #999;
  }
  
  .markdown-preview .inline-code,
  .html-preview .code {
    background-color: #2d2d2d;
    color: #f78c6c;
  }
  
  .markdown-preview .blockquote,
  .html-preview .blockquote {
    background-color: #252525;
    border-color: #404040;
    color: #999;
  }
  
  .markdown-preview .table,
  .html-preview .table {
    border-color: #404040;
  }
  
  .markdown-preview .th,
  .markdown-preview .td,
  .html-preview .th,
  .html-preview .td {
    border-color: #404040;
  }
  
  .markdown-preview .th,
  .html-preview .th {
    background-color: #252525;
    color: #e0e0e0;
  }
  
  .markdown-preview .td,
  .html-preview .td {
    background-color: #1a1a1a;
    color: #e0e0e0;
  }
  
  .markdown-preview .hr,
  .html-preview .hr {
    background-color: #404040;
  }
  
  .markdown-preview .link,
  .html-preview .a {
    color: #58a6ff;
  }
  
  .markdown-preview .link:hover,
  .html-preview .a:hover {
    color: #79b8ff;
  }
  
  .preview-error {
    background-color: #2a1a1a;
    border-color: #5c2c2c;
  }
  
  .error-text {
    color: #ff6b6b;
  }
  
  .preview-loading {
    background-color: rgba(26, 26, 26, 0.9);
  }
}