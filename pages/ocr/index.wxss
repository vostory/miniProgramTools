.ocr-page {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding-bottom: 100rpx;
}

.custom-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: var(--card-bg);
  border-bottom: 1rpx solid var(--border-color);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn, .home-btn {
  background: none;
  border: none;
  font-size: 36rpx;
  padding: 0;
  margin: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.2s;
}

.back-btn:active, .home-btn:active {
  background-color: rgba(0, 0, 0, 0.1);
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  flex: 1;
  text-align: center;
}

.type-section {
  padding: 20rpx 30rpx;
  background-color: var(--card-bg);
  border-bottom: 1rpx solid var(--border-color);
}

.type-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.type-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  background: none;
  border: 2rpx solid var(--border-color);
  border-radius: 20rpx;
  transition: all 0.3s;
}

.type-btn::after {
  border: none;
}

.type-btn.active {
  border-color: var(--primary-color);
  background-color: rgba(7, 193, 96, 0.1);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.1);
}

.type-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.type-name {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 500;
}

.tip-card {
  margin: 20rpx 30rpx;
  padding: 30rpx;
  background-color: #f0f9ff;
  border-left: 4rpx solid #1890ff;
}

.tip-header {
  margin-bottom: 20rpx;
}

.tip-title {
  font-size: 28rpx;
  color: #1890ff;
  font-weight: 600;
}

.tip-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-line;
}

.tip-text {
  display: block;
  line-height: 1.6;
}

.upload-section {
  padding: 0 30rpx;
  margin: 20rpx 0;
}

.upload-card {
  padding: 30rpx;
  text-align: center;
}

.upload-header {
  margin-bottom: 30rpx;
}

.upload-title {
  font-size: 28rpx;
  color: var(--text-color);
  font-weight: 600;
}

.image-preview {
  position: relative;
  width: 100%;
  height: 400rpx;
  border: 2rpx dashed var(--border-color);
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.delete-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  border: none;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  z-index: 10;
}

.delete-btn::after {
  border: none;
}

.upload-buttons {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin: 40rpx 0 30rpx;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 20rpx;
  background: none;
  transition: all 0.3s;
}

.upload-btn::after {
  border: none;
}

.upload-btn:active {
  transform: scale(0.95);
  border-color: var(--primary-color);
  background-color: rgba(7, 193, 96, 0.1);
}

.btn-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.btn-text {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 500;
}

.recognize-btn {
  background-color: var(--primary-color);
  color: #ffffff;
  border: none;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  margin-top: 20rpx;
  transition: all 0.3s;
}

.recognize-btn::after {
  border: none;
}

.recognize-btn:disabled {
  background-color: #cccccc;
  color: #999999;
  opacity: 0.7;
}

.recognize-btn:active:not(:disabled) {
  background-color: #06b155;
  transform: scale(0.98);
}

.result-section {
  padding: 0 30rpx;
  margin: 20rpx 0;
}

.result-card {
  padding: 30rpx;
  background-color: #f0f9f0;
  border-left: 4rpx solid var(--primary-color);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.result-title {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 600;
}

.copy-btn {
  background: none;
  border: 1rpx solid var(--primary-color);
  border-radius: 10rpx;
  padding: 8rpx 20rpx;
  font-size: 22rpx;
  color: var(--primary-color);
  transition: all 0.3s;
}

.copy-btn::after {
  border: none;
}

.copy-btn:active {
  background-color: var(--primary-color);
  color: #ffffff;
}

.result-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #e8e8e8;
}

.result-item:last-child {
  border-bottom: none;
}

.result-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
  min-width: 120rpx;
  margin-right: 20rpx;
  white-space: nowrap;
}

.result-value {
  flex: 1;
  font-size: 24rpx;
  color: var(--text-color);
  background-color: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 8rpx 12rpx;
  margin-right: 20rpx;
  min-height: 40rpx;
  line-height: 1.4;
  box-sizing: border-box;
  transition: border-color 0.3s;
}

.result-value:focus {
  border-color: var(--primary-color);
  outline: none;
}

.result-value.error {
  border-color: #ff4d4f;
  background-color: #fff5f5;
}

.copy-single-btn {
  background: none;
  border: 1rpx solid var(--primary-color);
  border-radius: 8rpx;
  padding: 6rpx 16rpx;
  font-size: 20rpx;
  color: var(--primary-color);
  white-space: nowrap;
  transition: all 0.3s;
}

.copy-single-btn::after {
  border: none;
}

.copy-single-btn:active {
  background-color: var(--primary-color);
  color: #ffffff;
}

.validation-result {
  margin-top: 20rpx;
  padding: 15rpx 20rpx;
  background-color: #fff5f5;
  border: 1rpx solid #ffccc7;
  border-radius: 8rpx;
}

.validation-header {
  margin-bottom: 10rpx;
}

.validation-title {
  font-size: 24rpx;
  color: #ff4d4f;
  font-weight: 500;
}

.validation-list {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.validation-item {
  display: flex;
  align-items: center;
  padding: 5rpx 0;
}

.validation-text {
  font-size: 20rpx;
  color: #666;
  line-height: 1.4;
}

.history-section {
  padding: 0 30rpx;
  margin: 20rpx 0;
}

.history-card {
  padding: 30rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.history-title {
  font-size: 28rpx;
  color: var(--text-color);
  font-weight: 600;
}

.clear-btn {
  background: none;
  border: none;
  color: #ff4d4f;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.clear-btn::after {
  border: none;
}

.clear-btn:active {
  background-color: #fff5f5;
  transform: scale(0.95);
}

.history-list {
  max-height: 300rpx;
  padding-right: 10rpx;
}

.history-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
  transition: all 0.3s;
}

.history-item:active {
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 10rpx;
  padding: 20rpx 15rpx;
  margin: 0 -15rpx;
}

.history-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.history-type {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 500;
}

.history-time {
  font-size: 20rpx;
  color: #999;
}

.history-result {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.history-text {
  font-size: 22rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.privacy-card {
  margin: 20rpx 30rpx;
  padding: 30rpx;
  background-color: #fff5f5;
  border-left: 4rpx solid #ff4d4f;
}

.privacy-header {
  margin-bottom: 20rpx;
}

.privacy-title {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: 600;
}

.privacy-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-line;
}

.privacy-text {
  display: block;
  line-height: 1.6;
}