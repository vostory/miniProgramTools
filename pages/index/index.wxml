<view class="page-container" data-theme="{{theme}}">
  <!-- 顶部标题栏 -->
  <view class="header">
    <view class="title-section">
      <text class="app-name">🔧 青小主工具集</text>
      <text class="app-desc">轻量实用 · 离线优先 · 隐私保护</text>
    </view>
    <button class="theme-btn" bindtap="toggleTheme">
      {{theme === 'light' ? '🌙 暗色' : '☀️ 亮色'}}
    </button>
  </view>

  <!-- 搜索框（预留） -->
  <view class="search-bar card" wx:if="{{false}}">
    <text class="search-icon">🔍</text>
    <input 
      class="search-input" 
      placeholder="搜索工具..." 
      disabled
    />
  </view>

  <!-- 主要工具网格 -->
  <view class="section-title">
    <text>常用工具</text>
  </view>
  
  <view class="tools-grid">
    <!-- 第1行 -->
    <navigator 
      class="tool-card" 
      url="/pages/calculator/basic/index" 
      hover-class="tool-hover"
    >
      <view class="tool-icon">🧮</view>
      <text class="tool-name">基础计算器</text>
      <text class="tool-desc">加减乘除、百分比</text>
    </navigator>

    <navigator 
      class="tool-card" 
      url="/pages/calculator/scientific/index" 
      hover-class="tool-hover"
    >
      <view class="tool-icon">🔬</view>
      <text class="tool-name">科学计算器</text>
      <text class="tool-desc">三角函数、指数对数</text>
    </navigator>

    <!-- 第2行 -->
    <navigator 
      class="tool-card" 
      url="/pages/datecalc/index" 
      hover-class="tool-hover"
    >
      <view class="tool-icon">📅</view>
      <text class="tool-name">日期计算</text>
      <text class="tool-desc">日期间隔、工作日</text>
    </navigator>

    <navigator 
      class="tool-card" 
      url="/pages/converter/index" 
      hover-class="tool-hover"
    >
      <view class="tool-icon">📏</view>
      <text class="tool-name">单位换算</text>
      <text class="tool-desc">长度、重量、温度等</text>
    </navigator>

    <!-- 第3行 -->
    <navigator 
      class="tool-card" 
      url="/pages/ocr/index" 
      hover-class="tool-hover"
    >
      <view class="tool-icon">🪪</view>
      <text class="tool-name">证件识别</text>
      <text class="tool-desc">身份证、银行卡等</text>
    </navigator>

    <!-- 第4行 - 占位功能 -->
    <!-- <view class="tool-card coming-soon" bindtap="showComingSoon"> -->
    <navigator 
      class="tool-card" 
      url="/pages/currency/index" 
      hover-class="tool-hover"
    >
      <view class="tool-icon">📊</view>
      <text class="tool-name">货币换算</text>
      <text class="tool-desc">汇率计算（需网络）</text>
    </navigator>
    <!-- </view> -->

    <view class="tool-card coming-soon" bindtap="showComingSoon">
      <view class="tool-icon">📈</view>
      <text class="tool-name">房贷计算</text>
      <text class="tool-desc">贷款、利息计算</text>
    </view>

    <view class="tool-card coming-soon" bindtap="showComingSoon">
      <view class="tool-icon">🧮</view>
      <text class="tool-name">进制转换</text>
      <text class="tool-desc">二进制、十六进制等</text>
    </view>

    <view class="tool-card coming-soon" bindtap="showComingSoon">
      <view class="tool-icon">📋</view>
      <text class="tool-name">文本处理</text>
      <text class="tool-desc">格式转换、统计</text>
    </view>
  </view>

  <!-- 快捷功能栏 -->
  <view class="section-title">
    <text>快捷功能</text>
  </view>
  
  <view class="quick-actions card">
    <button class="quick-btn" bindtap="clearAllHistory">
      <view class="quick-icon">🗑️</view>
      <text>清空历史</text>
    </button>
    
    <button class="quick-btn" bindtap="showAppInfo">
      <view class="quick-icon">ℹ️</view>
      <text>关于应用</text>
    </button>
    
    <button class="quick-btn" bindtap="shareApp">
      <view class="quick-icon">↗️</view>
      <text>分享应用</text>
    </button>
    
    <button class="quick-btn" bindtap="feedback">
      <view class="quick-icon">💬</view>
      <text>反馈建议</text>
    </button>
  </view>

  <!-- 使用统计 -->
  <view class="stats-card card" wx:if="{{showStats}}">
    <view class="stats-header">
      <text>使用统计</text>
      <button class="stats-close" bindtap="toggleStats">×</button>
    </view>
    <view class="stats-content">
      <view class="stat-item">
        <text class="stat-value">{{toolStats.calculator || 0}}</text>
        <text class="stat-label">计算次数</text>
      </view>
      <view class="stat-item">
        <text class="stat-value">{{toolStats.converter || 0}}</text>
        <text class="stat-label">换算次数</text>
      </view>
      <view class="stat-item">
        <text class="stat-value">{{toolStats.ocr || 0}}</text>
        <text class="stat-label">识别次数</text>
      </view>
    </view>
  </view>

  <!-- 底部信息 -->
  <view class="footer">
    <view class="footer-info">
      <text class="version">v1.0.0</text>
      <text class="update-time">最后更新: 2025-12-23</text>
    </view>
    <view class="footer-links">
      <button class="footer-link" bindtap="openGitHub">GitHub</button>
      <text class="footer-separator">|</text>
      <button class="footer-link" bindtap="openPrivacy">隐私政策</button>
      <text class="footer-separator">|</text>
      <button class="footer-link" bindtap="openHelp">使用帮助</button>
    </view>
    <text class="copyright">© 2025 青小主工具集 · 所有计算均在本地完成</text>
  </view>

  <!-- 欢迎提示 -->
  <view class="welcome-toast {{showWelcome ? 'show' : ''}}">
    <text>欢迎使用青小主工具集！点击图标开始使用</text>
  </view>
</view>