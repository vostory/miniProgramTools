/* 页面容器 */
.page-container {
  padding: 0 0 100rpx;
  min-height: 100vh;
  background-color: var(--bg-color);
  position: relative;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 32rpx 24rpx;
  background: linear-gradient(135deg, var(--primary-color), #34a853);
  color: white;
  border-radius: 0 0 24rpx 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(7, 193, 96, 0.2);
}

.title-section {
  flex: 1;
}

.app-name {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: white;
}

.app-desc {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
  color: rgba(255, 255, 255, 0.9);
}

.theme-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 100rpx;
  color: white;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  height: auto;
  line-height: 1.4;
  backdrop-filter: blur(10rpx);
}

.theme-btn::after {
  border: none;
}

/* 搜索框 */
.search-bar {
  margin: 24rpx 32rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  background-color: var(--card-bg);
}

.search-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
}

.search-input::placeholder {
  color: #999;
}

/* 区域标题 */
.section-title {
  padding: 40rpx 32rpx 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  display: flex;
  align-items: center;
}

.section-title::before {
  content: "";
  width: 6rpx;
  height: 28rpx;
  background-color: var(--primary-color);
  border-radius: 3rpx;
  margin-right: 12rpx;
}

/* 工具网格 */
.tools-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 0 32rpx 32rpx;
}

.tool-card {
  background-color: var(--card-bg);
  border-radius: var(--radius);
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: var(--shadow);
  border: 1rpx solid var(--border-color);
  transition: all 0.3s ease;
  text-decoration: none;
  position: relative;
  overflow: hidden;
}

.tool-card::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background-color: var(--primary-color);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.tool-hover, .tool-card:active {
  transform: translateY(-8rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.12);
  border-color: var(--primary-color);
}

.tool-hover::after, .tool-card:active::after {
  transform: scaleX(1);
}

.tool-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(7, 193, 96, 0.1), rgba(52, 168, 83, 0.1));
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.tool-card:active .tool-icon {
  transform: scale(1.1);
}

.tool-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color);
  margin-bottom: 8rpx;
  display: block;
}

.tool-desc {
  font-size: 22rpx;
  color: #999;
  display: block;
  line-height: 1.4;
}

/* 即将上线样式 */
.coming-soon {
  opacity: 0.7;
  cursor: not-allowed;
  position: relative;
}

.coming-soon::before {
  content: "即将上线";
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: rgba(7, 193, 96, 0.2);
  color: var(--primary-color);
  font-size: 18rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.coming-soon .tool-icon {
  background: linear-gradient(135deg, rgba(153, 153, 153, 0.1), rgba(102, 102, 102, 0.1));
}

/* 快捷功能 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  margin: 0 32rpx 32rpx;
  padding: 24rpx;
  background-color: var(--card-bg);
}

.quick-btn {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-color);
  flex: 1;
}

.quick-btn::after {
  border: none;
}

.quick-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(7, 193, 96, 0.1);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.quick-btn:active .quick-icon {
  transform: scale(1.1);
  background-color: rgba(7, 193, 96, 0.2);
}

/* 统计卡片 */
.stats-card {
  margin: 0 32rpx 32rpx;
  padding: 32rpx;
  background-color: var(--card-bg);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid var(--border-color);
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color);
}

.stats-close {
  background: none;
  border: none;
  font-size: 40rpx;
  color: #999;
  width: 40rpx;
  height: 40rpx;
  line-height: 1;
  padding: 0;
  margin: 0;
}

.stats-close::after {
  border: none;
}

.stats-content {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 底部 */
.footer {
  padding: 40rpx 32rpx;
  text-align: center;
  border-top: 1rpx solid var(--border-color);
  margin-top: 20rpx;
}

.footer-info {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.version {
  padding: 4rpx 12rpx;
  background-color: rgba(7, 193, 96, 0.1);
  border-radius: 8rpx;
  color: var(--primary-color);
}

.update-time {
  color: #999;
}

.footer-links {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.footer-link {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  color: var(--primary-color);
  font-size: 24rpx;
  text-decoration: none;
}

.footer-link::after {
  border: none;
}

.footer-separator {
  color: #ddd;
}

.copyright {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  display: block;
}

/* 欢迎提示 */
.welcome-toast {
  position: fixed;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%) translateY(100rpx);
  background-color: var(--card-bg);
  color: var(--text-color);
  padding: 20rpx 32rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.15);
  opacity: 0;
  visibility: hidden;
  transition: all 0.5s ease;
  z-index: 1000;
  white-space: nowrap;
  border: 1rpx solid var(--border-color);
  backdrop-filter: blur(20rpx);
}

.welcome-toast.show {
  transform: translateX(-50%) translateY(0);
  opacity: 1;
  visibility: visible;
}

/* 响应式调整 */
@media (min-width: 768px) {
  .tools-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}