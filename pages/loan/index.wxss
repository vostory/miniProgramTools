/* 页面容器 */
.loan-page {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding-bottom: 100rpx;
}

/* 自定义导航栏 */
.custom-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: var(--card-bg);
  border-bottom: 1rpx solid var(--border-color);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn, .home-btn {
  background: none;
  border: none;
  font-size: 36rpx;
  padding: 0;
  margin: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
  transition: all 0.2s;
}

.back-btn:active, .home-btn:active {
  background-color: rgba(0, 0, 0, 0.1);
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  flex: 1;
  text-align: center;
}

/* 计算类型选择 */
.calc-type-section {
  padding: 20rpx 30rpx;
  background-color: var(--card-bg);
  border-bottom: 1rpx solid var(--border-color);
}

.type-buttons {
  display: flex;
  gap: 20rpx;
}

.type-btn {
  flex: 1;
  background: none;
  border: 1rpx solid var(--border-color);
  border-radius: 0;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s;
}

.type-btn::after {
  border: none;
}

.type-btn.active {
  background-color: var(--primary-color);
  color: #ffffff;
  border-color: var(--primary-color);
}

.type-btn:active:not(.active) {
  border-color: var(--primary-color);
  color: var(--primary-color);
  background-color: rgba(7, 193, 96, 0.1);
}

/* 输入区域 */
.input-section {
  padding: 20rpx 30rpx 0;
}

.input-card {
  padding: 30rpx;
  background-color: var(--card-bg);
  border: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 500;
}

.input-unit {
  font-size: 20rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 下拉选择容器 */
.dropdown-container {
  margin-bottom: 10rpx;
}

.amount-picker,
.years-picker,
.rate-picker {
  background-color: #ffffff;
  border: 1rpx solid var(--border-color);
  border-radius: 0;
  padding: 20rpx 24rpx;
  font-size: 24rpx;
  color: var(--text-color);
  width: 100%;
  box-sizing: border-box;
  min-height: 60rpx;
  line-height: 1.2;
  transition: border-color 0.3s;
  text-align: center;
}

.amount-picker:active,
.years-picker:active,
.rate-picker:active {
  border-color: var(--primary-color);
  background-color: rgba(7, 193, 96, 0.1);
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.picker-value {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 500;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
}

/* 自定义输入框 */
.custom-amount {
  margin-top: 10rpx;
}

.custom-input {
  background-color: #ffffff;
  border: 1rpx solid var(--border-color);
  border-radius: 0;
  padding: 15rpx 20rpx;
  font-size: 20rpx;
  color: var(--text-color);
  width: 100%;
  box-sizing: border-box;
  min-height: 60rpx;
  line-height: 1.2;
  transition: border-color 0.3s;
}

.custom-input:focus {
  border-color: var(--primary-color);
  outline: none;
}

/* 还款方式按钮 */
.repayment-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 10rpx;
}

.repayment-btn {
  flex: 1;
  background: none;
  border: 1rpx solid var(--border-color);
  border-radius: 0;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s;
}

.repayment-btn::after {
  border: none;
}

.repayment-btn.active {
  background-color: var(--primary-color);
  color: #ffffff;
  border-color: var(--primary-color);
}

.repayment-btn:active:not(.active) {
  border-color: var(--primary-color);
  color: var(--primary-color);
  background-color: rgba(7, 193, 96, 0.1);
}

/* 计算按钮 */
.calc-btn {
  background-color: var(--primary-color);
  color: #ffffff;
  border: none;
  border-radius: 0;
  font-size: 28rpx;
  font-weight: 600;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  margin-top: 20rpx;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.3);
}

.calc-btn::after {
  border: none;
}

.calc-btn:disabled {
  background-color: #cccccc;
  color: #999999;
  opacity: 0.7;
  box-shadow: none;
}

.calc-btn:active:not(:disabled) {
  background-color: #06b155;
  transform: translateY(2rpx);
}

/* 结果区域 */
.result-section {
  padding: 20rpx 30rpx 0;
}

.result-card {
  padding: 30rpx;
  background-color: var(--card-bg);
  border: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.result-header {
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.result-title {
  font-size: 28rpx;
  color: var(--text-color);
  font-weight: 600;
}

/* 关键指标 */
.key-metrics {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.metric-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.metric-label {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.metric-value {
  font-size: 22rpx;
  color: var(--text-color);
  font-weight: 500;
  text-align: center;
}

/* 计算结果 */
.calc-results {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.result-left {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.result-name {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 500;
  margin-bottom: 5rpx;
}

.result-desc {
  font-size: 20rpx;
  color: #999;
}

.result-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  text-align: right;
}

.result-value {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 600;
  margin-bottom: 5rpx;
}

.result-change {
  font-size: 20rpx;
  color: #999;
}

.interest-value {
  color: #ff4d4f;
  font-weight: 600;
}

.total-value {
  color: #1890ff;
  font-weight: 600;
}

.result-divider {
  height: 1rpx;
  background-color: var(--border-color);
  margin: 10rpx 0;
}

/* 还款计划 */
.plan-section {
  background-color: var(--card-bg);
  border: 1rpx solid var(--border-color);
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.plan-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.plan-title {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 600;
  margin-right: 10rpx;
}

.plan-subtitle {
  font-size: 20rpx;
  color: #999;
}

.plan-table {
  border: 1rpx solid var(--border-color);
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.table-header {
  display: flex;
  background-color: #f8f9fa;
  border-bottom: 1rpx solid var(--border-color);
  padding: 15rpx 10rpx;
  font-weight: 500;
  color: var(--text-color);
}

.header-cell {
  flex: 1;
  text-align: center;
  font-size: 20rpx;
  padding: 0 5rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.period-cell {
  flex: 0.8;
}

.payment-cell, .principal-cell, .interest-cell {
  flex: 1.1;
}

.balance-cell {
  flex: 1.5;
}

.table-body {
  max-height: 400rpx;
  overflow-y: auto;
}

.table-row {
  display: flex;
  align-items: center;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: background-color 0.3s;
}

.table-row:last-child {
  border-bottom: none;
}

.table-row:active {
  background-color: #f8f9fa;
}

.table-cell {
  flex: 1;
  text-align: center;
  font-size: 20rpx;
  color: var(--text-color);
  padding: 0 5rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 查看完整计划按钮 */
.view-full-btn {
  background: none;
  border: 1rpx solid var(--primary-color);
  border-radius: 0;
  color: var(--primary-color);
  font-size: 24rpx;
  padding: 20rpx 0;
  width: 100%;
  transition: all 0.3s;
}

.view-full-btn::after {
  border: none;
}

.view-full-btn:active {
  background-color: rgba(7, 193, 96, 0.1);
  transform: translateY(2rpx);
}

/* 历史记录 */
.history-section {
  padding: 0 30rpx 20rpx;
}

.history-card {
  padding: 30rpx;
  background-color: var(--card-bg);
  border: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.history-title {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 600;
}

.clear-btn {
  background: none;
  border: none;
  color: #ff4d4f;
  font-size: 20rpx;
  padding: 8rpx 16rpx;
  transition: all 0.3s;
}

.clear-btn::after {
  border: none;
}

.clear-btn:active {
  background-color: #fff5f5;
  transform: scale(0.95);
}

.history-list {
  max-height: 300rpx;
  overflow-y: auto;
  padding-right: 10rpx;
}

.history-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
  transition: background-color 0.3s;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background-color: #f8f9fa;
}

.history-content {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 10rpx;
  flex-wrap: wrap;
}

.history-amount,
.history-years,
.history-rate,
.history-type {
  font-size: 20rpx;
  color: var(--text-color);
  font-weight: 500;
  background-color: rgba(0, 0, 0, 0.05);
  padding: 4rpx 12rpx;
  border-radius: 0;
}

.history-type {
  background-color: rgba(7, 193, 96, 0.1);
  color: var(--primary-color);
}

.history-result {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 5rpx;
  font-size: 20rpx;
  color: #666;
}

.history-monthly {
  color: var(--primary-color);
  font-weight: 500;
}

.history-total {
  color: #ff4d4f;
  font-weight: 500;
}

.history-time {
  font-size: 18rpx;
  color: #999;
  display: block;
}

/* 空历史记录样式 */
.empty-history {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  color: #999;
  font-size: 24rpx;
}

/* 说明信息 */
.info-section {
  padding: 0 30rpx 20rpx;
}

.info-card {
  padding: 30rpx;
  background-color: var(--card-bg);
  border: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.info-header {
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.info-title {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 600;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.info-label {
  font-size: 20rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.info-text {
  font-size: 20rpx;
  color: #666;
  line-height: 1.4;
  text-align: justify;
}

/* 添加历史记录项点击效果 */
.history-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
  transition: background-color 0.3s;
  -webkit-tap-highlight-color: transparent;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background-color: #f8f9fa;
}