/* 页面容器 */
.base-page {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding-bottom: 100rpx;
}

/* 自定义导航栏 */
.custom-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: var(--card-bg);
  border-bottom: 1rpx solid var(--border-color);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn, .home-btn {
  background: none;
  border: none;
  font-size: 36rpx;
  padding: 0;
  margin: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
  transition: all 0.2s;
}

.back-btn:active, .home-btn:active {
  background-color: rgba(0, 0, 0, 0.1);
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  flex: 1;
  text-align: center;
}

/* 输入区域 */
.input-section {
  padding: 20rpx 30rpx 0;
}

.input-card {
  padding: 30rpx;
  background-color: var(--card-bg);
  border: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 500;
  margin-bottom: 15rpx;
  display: block;
}

.value-input {
  background-color: #ffffff;
  border: 1rpx solid var(--border-color);
  border-radius: 0;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: var(--text-color);
  width: 100%;
  box-sizing: border-box;
  min-height: 80rpx;
  line-height: 1.2;
  transition: border-color 0.3s;
  font-family: 'Courier New', monospace;
}

.value-input:focus {
  border-color: var(--primary-color);
  outline: none;
}

.input-hint {
  margin-top: 10rpx;
  padding: 8rpx 12rpx;
  background-color: #fff5f5;
  border-left: 4rpx solid #ff4d4f;
  font-size: 20rpx;
  color: #ff4d4f;
  line-height: 1.4;
}

.hint-text {
  display: block;
}

/* 进制按钮 */
.base-buttons {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15rpx;
  margin-top: 10rpx;
}

.base-btn {
  background: none;
  border: 1rpx solid var(--border-color);
  border-radius: 0;
  padding: 20rpx 0;
  font-size: 22rpx;
  color: #666;
  transition: all 0.3s;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.base-btn::after {
  border: none;
}

.base-btn.active {
  background-color: var(--primary-color);
  color: #ffffff;
  border-color: var(--primary-color);
  font-weight: 500;
}

.base-btn:active:not(.active) {
  border-color: var(--primary-color);
  color: var(--primary-color);
  background-color: rgba(7, 193, 96, 0.1);
}

/* 交换按钮 */
.swap-container {
  display: flex;
  justify-content: center;
  margin: 20rpx 0 30rpx;
  padding: 20rpx 0;
  border-top: 1rpx solid var(--border-color);
  border-bottom: 1rpx solid var(--border-color);
}

.swap-btn {
  background: none;
  border: 1rpx solid var(--border-color);
  border-radius: 0;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: var(--text-color);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s;
  background-color: var(--card-bg);
  width: 200rpx;
}

.swap-btn::after {
  border: none;
}

.swap-btn:active {
  border-color: var(--primary-color);
  background-color: rgba(7, 193, 96, 0.1);
  color: var(--primary-color);
}

.swap-icon {
  font-size: 24rpx;
  color: inherit;
}

/* 转换按钮 */
.convert-btn {
  background-color: var(--primary-color);
  color: #ffffff;
  border: none;
  border-radius: 0;
  font-size: 28rpx;
  font-weight: 600;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.3);
}

.convert-btn::after {
  border: none;
}

.convert-btn:disabled {
  background-color: #cccccc;
  color: #999999;
  opacity: 0.7;
  box-shadow: none;
}

.convert-btn:active:not(:disabled) {
  background-color: #06b155;
  transform: translateY(2rpx);
}

/* 结果区域 */
.result-section {
  padding: 0 30rpx 20rpx;
}

.result-card {
  padding: 30rpx;
  background-color: var(--card-bg);
  border: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.result-header {
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.result-title {
  font-size: 28rpx;
  color: var(--text-color);
  font-weight: 600;
}

/* 结果信息 */
.result-info {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border: 1rpx solid var(--border-color);
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 24rpx;
  line-height: 1.4;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #666;
  font-weight: 500;
  min-width: 120rpx;
  margin-right: 10rpx;
}

.info-value {
  color: var(--text-color);
  font-weight: 500;
  flex: 1;
  font-family: 'Courier New', monospace;
  word-break: break-all;
}

.output-value {
  color: var(--primary-color);
  font-size: 28rpx;
  font-weight: 600;
}

/* 转换箭头 */
.arrow-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
  padding: 20rpx 0;
  position: relative;
}

.arrow-text {
  font-size: 40rpx;
  color: var(--primary-color);
  font-weight: bold;
  animation: arrowPulse 2s infinite;
}

@keyframes arrowPulse {
  0%, 100% {
    transform: translateY(0);
    opacity: 0.8;
  }
  50% {
    transform: translateY(5rpx);
    opacity: 1;
  }
}

/* 结果详情 */
.result-details {
  margin: 20rpx 0 30rpx;
  padding: 20rpx;
  background-color: #f0f9f0;
  border: 1rpx solid var(--border-color);
  border-left: 4rpx solid var(--primary-color);
}

.detail-item {
  margin-bottom: 15rpx;
  font-size: 20rpx;
  line-height: 1.6;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  color: #666;
  font-weight: 500;
  margin-right: 10rpx;
  white-space: nowrap;
}

.detail-value {
  color: #333;
  flex: 1;
  word-break: break-word;
  font-family: 'Courier New', monospace;
}

/* 复制按钮 */
.copy-btn {
  background: none;
  border: 1rpx solid var(--primary-color);
  border-radius: 0;
  color: var(--primary-color);
  font-size: 24rpx;
  padding: 20rpx 0;
  width: 100%;
  transition: all 0.3s;
  font-weight: 500;
}

.copy-btn::after {
  border: none;
}

.copy-btn:active {
  background-color: rgba(7, 193, 96, 0.1);
  transform: translateY(2rpx);
}

/* 进制表示法说明 */
.notation-section {
  padding: 0 30rpx 20rpx;
}

.notation-card {
  padding: 30rpx;
  background-color: var(--card-bg);
  border: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.notation-header {
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.notation-title {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 600;
}

.notation-content {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.notation-item {
  display: flex;
  flex-direction: column;
  padding: 15rpx;
  background-color: #f8f9fa;
  border: 1rpx solid var(--border-color);
  min-height: 120rpx;
  justify-content: center;
}

.notation-base {
  font-size: 20rpx;
  color: var(--primary-color);
  font-weight: 600;
  margin-bottom: 5rpx;
  text-align: center;
}

.notation-desc {
  font-size: 18rpx;
  color: #666;
  line-height: 1.4;
  text-align: center;
}

/* 进制对应表 */
.table-section {
  padding: 0 30rpx 20rpx;
}

.table-card {
  padding: 30rpx;
  background-color: var(--card-bg);
  border: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.table-header {
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.table-title {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 600;
}

.base-table {
  border: 1rpx solid var(--border-color);
  background-color: #ffffff;
  font-family: 'Courier New', monospace;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid var(--border-color);
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  flex: 1;
  padding: 15rpx 10rpx;
  text-align: center;
  font-size: 20rpx;
  color: var(--text-color);
  border-right: 1rpx solid var(--border-color);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.table-cell:last-child {
  border-right: none;
}

.table-cell.header {
  background-color: #f8f9fa;
  font-weight: 600;
  color: var(--text-color);
}

/* 历史记录 */
.history-section {
  padding: 0 30rpx 20rpx;
}

.history-card {
  padding: 30rpx;
  background-color: var(--card-bg);
  border: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.history-title {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 600;
}

.clear-btn {
  background: none;
  border: none;
  color: #ff4d4f;
  font-size: 20rpx;
  padding: 8rpx 16rpx;
  transition: all 0.3s;
}

.clear-btn::after {
  border: none;
}

.clear-btn:active {
  background-color: #fff5f5;
  transform: scale(0.95);
}

.history-list {
  max-height: 300rpx;
  overflow-y: auto;
  padding-right: 10rpx;
}

.history-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
  transition: background-color 0.3s;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background-color: #f8f9fa;
}

.history-content {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
  gap: 10rpx;
  flex-wrap: wrap;
}

.history-from,
.history-to {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 500;
  font-family: 'Courier New', monospace;
}

.history-arrow {
  font-size: 20rpx;
  color: #999;
  margin: 0 5rpx;
}

.history-info {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #999;
}

.history-time {
  color: #999;
  text-align: center;
}

/* 说明信息 */
.info-section {
  padding: 0 30rpx 20rpx;
}

.info-card {
  padding: 30rpx;
  background-color: var(--card-bg);
  border: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.info-header {
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.info-title {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 600;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  gap: 10rpx;
  line-height: 1.6;
}

.info-dot {
  color: var(--primary-color);
  font-size: 20rpx;
  line-height: 1.4;
  flex-shrink: 0;
  margin-top: 3rpx;
}

.info-text {
  font-size: 20rpx;
  color: #666;
  line-height: 1.4;
  flex: 1;
}