/* 页面容器 */
.text-page {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding-bottom: 100rpx;
}

/* 自定义导航栏 */
.custom-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: var(--card-bg);
  border-bottom: 1rpx solid var(--border-color);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn, .home-btn {
  background: none;
  border: none;
  font-size: 36rpx;
  padding: 0;
  margin: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
  transition: all 0.2s;
}

.back-btn:active, .home-btn:active {
  background-color: rgba(0, 0, 0, 0.1);
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  flex: 1;
  text-align: center;
}

/* 处理类型选择 */
.type-section {
  padding: 20rpx 30rpx;
  background-color: var(--card-bg);
  border-bottom: 1rpx solid var(--border-color);
}

.type-buttons {
  display: flex;
  overflow-x: auto;
  gap: 15rpx;
  padding-bottom: 10rpx;
  white-space: nowrap;
}

.type-buttons::-webkit-scrollbar {
  display: none;
}

.type-btn {
  background: none;
  border: 1rpx solid var(--border-color);
  border-radius: 0;
  padding: 15rpx 20rpx;
  font-size: 20rpx;
  color: #666;
  transition: all 0.3s;
  flex-shrink: 0;
  white-space: nowrap;
  min-width: 120rpx;
  text-align: center;
}

.type-btn::after {
  border: none;
}

.type-btn.active {
  background-color: var(--primary-color);
  color: #ffffff;
  border-color: var(--primary-color);
  font-weight: 500;
}

.type-btn:active:not(.active) {
  border-color: var(--primary-color);
  color: var(--primary-color);
  background-color: rgba(7, 193, 96, 0.1);
}

/* 输入区域 */
.input-section {
  padding: 20rpx 30rpx 0;
}

.input-card {
  padding: 30rpx;
  background-color: var(--card-bg);
  border: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.input-group {
  margin-bottom: 20rpx;
}

.input-label {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15rpx;
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 500;
}

.input-counter {
  font-size: 20rpx;
  color: #999;
  font-weight: normal;
}

.text-input {
  background-color: #ffffff;
  border: 1rpx solid var(--border-color);
  border-radius: 0;
  padding: 20rpx 24rpx;
  font-size: 24rpx;
  color: var(--text-color);
  width: 100%;
  min-height: 200rpx;
  line-height: 1.6;
  box-sizing: border-box;
  transition: border-color 0.3s;
  font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
}

.text-input:focus {
  border-color: var(--primary-color);
  outline: none;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  padding-top: 10rpx;
  border-top: 1rpx solid var(--border-color);
}

.action-btn {
  flex: 1;
  background: none;
  border: 1rpx solid var(--border-color);
  border-radius: 0;
  padding: 15rpx 0;
  font-size: 22rpx;
  color: #666;
  transition: all 0.3s;
  text-align: center;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  border-color: var(--primary-color);
  color: var(--primary-color);
  background-color: rgba(7, 193, 96, 0.1);
}

/* 格式化选项 */
.format-options {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border: 1rpx solid var(--border-color);
}

.options-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  align-items: center;
}

.option-item {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: var(--text-color);
  margin-right: 20rpx;
}

.option-item checkbox {
  margin-right: 8rpx;
  transform: scale(0.8);
}

.indent-picker {
  display: inline-block;
  background-color: #ffffff;
  border: 1rpx solid var(--border-color);
  border-radius: 0;
  padding: 6rpx 12rpx;
  font-size: 18rpx;
  color: var(--text-color);
  margin-left: 10rpx;
  min-width: 100rpx;
  text-align: center;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 5rpx;
}

/* 处理按钮 */
.process-btn {
  background-color: var(--primary-color);
  color: #ffffff;
  border: none;
  border-radius: 0;
  font-size: 28rpx;
  font-weight: 600;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.3);
}

.process-btn::after {
  border: none;
}

.process-btn:disabled {
  background-color: #cccccc;
  color: #999999;
  opacity: 0.7;
  box-shadow: none;
}

.process-btn:active:not(:disabled) {
  background-color: #06b155;
  transform: translateY(2rpx);
}

/* 结果区域 */
.result-section {
  padding: 0 30rpx 20rpx;
}

.result-card {
  padding: 30rpx;
  background-color: var(--card-bg);
  border: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.result-title {
  font-size: 28rpx;
  color: var(--text-color);
  font-weight: 600;
}

.result-actions {
  display: flex;
  gap: 15rpx;
}

.result-actions .copy-btn,
.result-actions .clear-btn {
  background: none;
  border: 1rpx solid var(--border-color);
  border-radius: 0;
  padding: 8rpx 16rpx;
  font-size: 20rpx;
  color: #666;
  transition: all 0.3s;
  min-width: 80rpx;
  text-align: center;
  line-height: normal;
  height: auto;
}

.result-actions .copy-btn {
  border-color: var(--primary-color);
  color: var(--primary-color);
}

.result-actions .copy-btn:active {
  background-color: rgba(7, 193, 96, 0.1);
}

.result-actions .clear-btn:active {
  background-color: #f8f9fa;
}

/* 结果组 */
.result-group {
  margin-bottom: 20rpx;
}

.result-label {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 20rpx;
  color: var(--text-color);
  font-weight: 500;
}

.result-counter {
  font-size: 18rpx;
  color: #999;
  font-weight: normal;
}

.result-container {
  max-height: 400rpx;
  border: 1rpx solid var(--border-color);
  background-color: #f8f9fa;
  padding: 20rpx;
  font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
  font-size: 20rpx;
  line-height: 1.8;
  overflow-x: auto;
  white-space: pre-wrap;
  word-break: break-word;
}

.result-content {
  width: 100%;
  min-height: 100rpx;
}

/* 特定格式的高亮 */
.result-content.json {
  color: #24292e;
}

.result-content.xml {
  color: #032f62;
}

.result-content.yaml {
  color: #0550ae;
}

.result-content.markdown {
  color: #24292e;
  line-height: 1.6;
}

.result-content.html {
  color: #d73a49;
}

.result-text {
  display: block;
  width: 100%;
  word-break: break-word;
  white-space: pre-wrap;
}

/* 处理信息 */
.info-group {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f0f9f0;
  border: 1rpx solid var(--border-color);
  border-left: 4rpx solid var(--primary-color);
}

.info-label {
  font-size: 20rpx;
  color: var(--text-color);
  font-weight: 500;
  margin-bottom: 10rpx;
}

.info-content {
  font-size: 18rpx;
  color: #666;
  line-height: 1.6;
}

.info-text {
  display: block;
  word-break: break-word;
}

/* 格式说明 */
.help-section {
  padding: 0 30rpx 20rpx;
}

.help-card {
  padding: 30rpx;
  background-color: var(--card-bg);
  border: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.help-header {
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.help-title {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 600;
}

.help-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.help-item {
  display: flex;
  align-items: flex-start;
  gap: 10rpx;
  line-height: 1.6;
}

.help-dot {
  color: var(--primary-color);
  font-size: 20rpx;
  line-height: 1.4;
  flex-shrink: 0;
  margin-top: 3rpx;
}

.help-text {
  font-size: 20rpx;
  color: #666;
  line-height: 1.4;
  flex: 1;
}

/* 历史记录 */
.history-section {
  padding: 0 30rpx 20rpx;
}

.history-card {
  padding: 30rpx;
  background-color: var(--card-bg);
  border: 1rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.history-title {
  font-size: 24rpx;
  color: var(--text-color);
  font-weight: 600;
}

.history-list {
  max-height: 300rpx;
  overflow-y: auto;
  padding-right: 10rpx;
}

.history-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
  transition: background-color 0.3s;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background-color: #f8f9fa;
}

.history-type {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 20rpx;
  color: var(--text-color);
}

.type-label {
  color: var(--primary-color);
  font-weight: 500;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 0;
}

.history-time {
  color: #999;
  font-size: 18rpx;
}

.history-preview {
  font-size: 18rpx;
  color: #666;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-word;
}

.preview-text {
  display: block;
  width: 100%;
}