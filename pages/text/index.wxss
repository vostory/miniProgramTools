/* 页面容器 */
.text-page {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding-bottom: 20rpx;
}

/* 自定义导航栏 */
.custom-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e0e0e0;
}

.back-btn, .home-btn {
  background: none;
  border: none;
  font-size: 36rpx;
  padding: 0;
  margin: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

/* 处理类型选择 - 下拉列表 */
.type-section {
  padding: 20rpx 30rpx;
  background-color: #ffffff;
}

.type-picker {
  background-color: #ffffff;
  border: 1rpx solid #d9d9d9;
  border-radius: 4rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
}

/* 输入区域 */
.input-section {
  padding: 20rpx 30rpx 0;
}

.input-card {
  padding: 20rpx;
  background-color: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 4rpx;
  margin-bottom: 20rpx;
}

.input-label {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.input-counter {
  font-size: 20rpx;
  color: #999;
}

.text-input {
  background-color: #ffffff;
  border: 1rpx solid #d9d9d9;
  border-radius: 4rpx;
  padding: 20rpx;
  font-size: 24rpx;
  color: #333;
  width: 100%;
  min-height: 200rpx;
  line-height: 1.6;
  box-sizing: border-box;
  font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  padding-top: 10rpx;
  border-top: 1rpx solid #e0e0e0;
}

.action-btn {
  flex: 1;
  background: none;
  border: 1rpx solid #d9d9d9;
  border-radius: 4rpx;
  padding: 15rpx 0;
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

.action-btn::after {
  border: none;
}

/* 格式化选项 */
.format-options {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border: 1rpx solid #e0e0e0;
  border-radius: 4rpx;
}

.options-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  align-items: center;
}

.option-item {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #333;
  margin-right: 20rpx;
}

.option-item checkbox {
  margin-right: 8rpx;
  transform: scale(0.8);
}

.indent-picker {
  display: inline-block;
  background-color: #ffffff;
  border: 1rpx solid #d9d9d9;
  border-radius: 4rpx;
  padding: 6rpx 12rpx;
  font-size: 18rpx;
  color: #333;
  margin-left: 10rpx;
  min-width: 100rpx;
  text-align: center;
}

/* 预览选项 */
.preview-options {
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  border-top: 1rpx solid #e0e0e0;
  border-bottom: 1rpx solid #e0e0e0;
}

.preview-buttons {
  display: flex;
  gap: 20rpx;
}

.preview-btn {
  flex: 1;
  background: none;
  border: 1rpx solid #d9d9d9;
  border-radius: 4rpx;
  padding: 15rpx 0;
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

.preview-btn::after {
  border: none;
}

.preview-btn.active {
  background-color: #07c160;
  color: #ffffff;
  border-color: #07c160;
}

/* 处理按钮 */
.process-btn {
  background-color: #07c160;
  color: #ffffff;
  border: none;
  border-radius: 4rpx;
  font-size: 28rpx;
  font-weight: bold;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
}

.process-btn::after {
  border: none;
}

.process-btn:disabled {
  background-color: #cccccc;
  color: #999999;
  opacity: 0.7;
}

/* 结果区域 - 修复按钮超出问题 */
.result-section {
  padding: 0 30rpx 20rpx;
  box-sizing: border-box;
  width: 100%;
}

.result-card {
  padding: 20rpx;
  background-color: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 4rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  max-width: 100%;
  overflow: hidden;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #e0e0e0;
  width: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.result-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}

.result-actions {
  display: flex;
  gap: 10rpx;
  flex-shrink: 0;
  min-width: 0;
  width: auto;
  margin-bottom: 10rpx;
}

.result-actions .copy-btn,
.result-actions .clear-btn {
  background: none;
  border: 1rpx solid #d9d9d9;
  border-radius: 4rpx;
  padding: 8rpx 12rpx;
  font-size: 20rpx;
  color: #666;
  min-width: 0;
  text-align: center;
  line-height: normal;
  height: auto;
  white-space: nowrap;
  flex-shrink: 0;
  box-sizing: border-box;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.result-actions .copy-btn {
  border-color: #07c160;
  color: #07c160;
  flex: 0 0 auto;
  min-width: 80rpx;
}

.result-actions .clear-btn {
  flex: 0 0 auto;
  min-width: 80rpx;
}

/* 结果组 */
.result-group {
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.result-label {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 20rpx;
  color: #333;
  font-weight: 500;
  width: 100%;
  box-sizing: border-box;
}

.result-counter {
  font-size: 18rpx;
  color: #999;
}

.result-container {
  max-height: 400rpx;
  border: 1rpx solid #e0e0e0;
  background-color: #f8f8f8;
  padding: 20rpx;
  font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
  font-size: 20rpx;
  line-height: 1.8;
  overflow-x: auto;
  white-space: pre-wrap;
  word-break: break-word;
  width: 100%;
  box-sizing: border-box;
}

.result-content {
  width: 100%;
  min-height: 100rpx;
  box-sizing: border-box;
}

.result-text {
  display: block;
  width: 100%;
  word-break: break-word;
  white-space: pre-wrap;
  box-sizing: border-box;
}

/* 预览容器 */
.preview-container {
  max-height: 400rpx;
  border: 1rpx solid #e0e0e0;
  background-color: #ffffff;
  padding: 20rpx;
  overflow-x: auto;
  font-size: 24rpx;
  line-height: 1.6;
  width: 100%;
  box-sizing: border-box;
}

.preview-content {
  min-height: 100rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 处理信息 */
.info-group {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f0f9f0;
  border: 1rpx solid #e0e0e0;
  border-left: 4rpx solid #07c160;
  width: 100%;
  box-sizing: border-box;
}

.info-label {
  font-size: 20rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.info-content {
  font-size: 18rpx;
  color: #666;
  line-height: 1.6;
}

.info-text {
  display: block;
  word-break: break-word;
}

/* 格式说明 */
.help-section {
  padding: 0 30rpx 20rpx;
  box-sizing: border-box;
  width: 100%;
}

.help-card {
  padding: 20rpx;
  background-color: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 4rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.help-header {
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #e0e0e0;
  width: 100%;
  box-sizing: border-box;
}

.help-title {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.help-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.help-item {
  display: flex;
  align-items: flex-start;
  gap: 10rpx;
  line-height: 1.6;
  width: 100%;
  box-sizing: border-box;
}

.help-dot {
  color: #07c160;
  font-size: 20rpx;
  line-height: 1.4;
  flex-shrink: 0;
  margin-top: 3rpx;
}

.help-text {
  font-size: 20rpx;
  color: #666;
  line-height: 1.4;
  flex: 1;
  min-width: 0;
  word-break: break-word;
}

/* 历史记录 */
.history-section {
  padding: 0 30rpx 20rpx;
  box-sizing: border-box;
  width: 100%;
}

.history-card {
  padding: 20rpx;
  background-color: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 4rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #e0e0e0;
  width: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.history-title {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}

.clear-btn {
  background: none;
  border: 1rpx solid #d9d9d9;
  border-radius: 4rpx;
  padding: 8rpx 12rpx;
  font-size: 20rpx;
  color: #666;
  min-width: 0;
  text-align: center;
  line-height: normal;
  height: auto;
  white-space: nowrap;
  flex-shrink: 0;
  box-sizing: border-box;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}

.history-list {
  max-height: 300rpx;
  overflow-y: auto;
  padding-right: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.history-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
  width: 100%;
  box-sizing: border-box;
}

.history-item:last-child {
  border-bottom: none;
}

.history-type {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 20rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.type-label {
  color: #07c160;
  font-weight: 500;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  flex-shrink: 0;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 5rpx;
  margin-right: 10rpx;
}

.history-time {
  color: #999;
  font-size: 18rpx;
  flex-shrink: 0;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 5rpx;
}

.history-preview {
  font-size: 18rpx;
  color: #666;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-word;
  width: 100%;
  box-sizing: border-box;
}

.preview-text {
  display: block;
  width: 100%;
  word-break: break-word;
}